pipeline{
    agent any
    environment {
         PATH = "$PATH:/usr/share/maven/bin"
    }
    stages{
        stage('Git Checkout'){
            steps{
                git branch: 'master', url: 'https://github.com/kiran5108/hello-world-war.git'
            }
        }
        stage('Build'){
            steps{
                 sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test')
        {
            steps{
                sh '''
                mvn test
                '''
            }
        }
        stage('Sonar Analysis'){
            steps{
                withSonarQubeEnv('sonarqube') {
                sh "mvn sonar:sonar"
            } 
        }
        
    }
    }
}
